<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Notes App</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
  <div class="main w-full min-h-screen text-white bg-zinc-900">
    <div class="form p-10">
      <form action="/create" method="post">
        <input type="text" class="block px-5 py-2 w-full rounded-md outline-none bg-zinc-800" 
               name="title" 
               placeholder="title goes here..." required>
        <textarea class="block px-5 mt-2 w-full rounded-md outline-none py-2 bg-zinc-800 resize-none" 
                  name="details" 
                  placeholder="write your tasks here..." required></textarea>
        <input type="submit" class="mt-2 bg-blue-600 px-5 py-2 rounded-md" value="Create Tasks">
      </form>
    </div>
    <div class="tasks p-10 flex flex-wrap gap-3">
      <% if (files.length > 0) { %>
        <% files.forEach(function(val) { %>
          <div class="task bg-zinc-800 w-72 px-3 py-4 rounded-md">
            <h2 class="text-3xl tracking-tighter"><%= val %></h2>
            <div class="w-full flex justify-between items-center mt-2">
              <a href="files/<%= val %>" class="text-blue-500">Read more</a>
              <a class="text-zinc-600" href="edit/<%= val %>">Edit</a>
            </div>
          </div>
        <% }); %>
      <% } else { %>
        <h1 class="text-2xl font-bold text-center w-full text-zinc-500">No tasks available.</h1>
      <% } %>
    </div>
  </div>
</body>
</html>